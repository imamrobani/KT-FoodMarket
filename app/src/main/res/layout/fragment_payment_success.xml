<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.detail.PaymentSuccessFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="201dp"
        android:src="@drawable/ic_success_order" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextView.PoppinsNormal20Ssp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Youâ€™ve Made Order" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/TextView.PoppinsNormal14Ssp8D92A3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Just stay at home while we are\n preparing your best foods"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnOtherFood"
        style="@style/Button.Primary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Order Other Foods"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnMyOrder"
        style="@style/Button.Secondary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="View My Order"
        android:textAllCaps="false" />

</LinearLayout>